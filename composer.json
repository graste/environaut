{
    "name": "graste/environaut",
    "type": "library",
    "description": "Define, configure and protect your application environment and its requirements.",
    "keywords": ["environment", "requirements", "configuration", "check", "cli", "web", "php", "configuration management"],
    "homepage": "https://github.com/graste/environaut",
    "license": "MIT",
    "authors": [
        {
            "name": "Steffen Gransow",
            "email": "graste@mivesto.de",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "environaut@mivesto.de",
        "issues": "https://github.com/graste/environaut/issues",
        "wiki": "https://github.com/graste/environaut/wiki",
        "irc": "irc://irc.freenode.org/honeybee",
        "source": "https://github.com/graste/environaut"
    },
    "minimum-stability": "stable",
    "bin": [
        "bin/environaut",
        "bin/environaut.phar"
    ],
    "config": {
        "vendor-dir": "vendor"
    },
    "require": {
        "php": ">=5.3.2",
        "symfony/console": "^2.5"
    },
    "require-dev": {
        "symfony/finder": "^2.5",
        "phpunit/phpunit": "~4.3",
        "sami/sami": "~2.0",
        "squizlabs/php_codesniffer": "~1.5"
    },
    "suggest": {
        "lib-libxml": "The libXML library and PHP extension is necessary for XML configuration files.",
        "sensiolabs/security-checker" : "For using the security checker in an environaut check"
    },
    "autoload": {
        "psr-0": {
            "Environaut\\": "src/"
        }
    }
}
